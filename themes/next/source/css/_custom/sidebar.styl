
.sidebar {
  left: 0;
  box-shadow: 0 2px 10px #333;
  background: $black-sidebar;
  opacity: 0.98;
}

.sidebar a {
  &:hover {
    color: $grey-light;
  }
}

.sidebar-inner {
  display: none;
}

.sidebar-background {
  position: absolute;
  background-image: url('/images/picture.jpg');
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  transition: opacity 1s;
  opacity: 0;
}

.sidebar-toggle {
  display:block;
  right: 0px;
  left: 50px;
  width: 15px;
  height: 15px;
  padding-bottom: 3px;
  background: $black-sidebar;
}

.post-toc .nav .nav-child {
  display: block;
}

@import sidebar-author;
